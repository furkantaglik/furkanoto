// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Cars {
  id          String   @id @default(uuid())
  brand       String?
  model       String?
  body        String?
  color       String?
  fuel        String?
  gear        String?
  engine      Float?
  speed       Int?
  price       Int?
  year        Int?
  description String?
  image1      String?
  image2      String?
  image3      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Highlights {
  id          String  @id @default(uuid())
  title       String?
  description String?
  url         String?
  image       String?
}

model Saved {
  id     String @id @default(uuid())
  carId  String
  userId String
}

model Purchased {
  id     String @id @default(uuid())
  userId String
  carId  String
}
